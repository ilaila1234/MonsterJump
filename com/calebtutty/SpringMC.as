package com.calebtutty {		import flash.display.MovieClip;	import flash.events.TimerEvent;	import flash.utils.Timer;	import com.greensock.TimelineLite;	import com.greensock.TweenLite;			public class SpringMC extends MovieClip {				public var collisionArea:MovieClip;	//this is will hold a reference											//to the playerMC											//so we can test if there is a											//collision													private var playerMCReference:MovieClip;		private var springTimer:Timer = new Timer(10, 1);		private var performingSpecial:Boolean = false;															public var type:String = "Spring";				public function SpringMC()		{						//trace("SpringMC constructed");					}				public function collisionTest():Boolean {				if (hitTestObject(collisionArea)) {				return true;			}			else {				return false;			}		}				public function performSpecialFunctionOn($playerMC:MovieClip)		{			if(!performingSpecial)			{				trace("performingSpecialFunction");				playerMCReference = $playerMC;				springTimer.addEventListener(TimerEvent.TIMER, spriiingPlayer);				springTimer.addEventListener(TimerEvent.TIMER_COMPLETE, removeSpecialFunction);							springTimer.start();				performingSpecial = true;			}					}				public function spriiingPlayer(e:TimerEvent)		{			this.gotoAndStop("Sprung");			trace("spriiingPlayer");			TweenLite.to(playerMCReference, 0.25, {y: (playerMCReference.y - 120) });		}				public function removeSpecialFunction(e:TimerEvent)		{			//this.gotoAndStop("Spring");			trace("removeSpecialFunction");			e.target.stop();			removeEventListener(TimerEvent.TIMER, spriiingPlayer);			removeEventListener(TimerEvent.TIMER_COMPLETE, removeSpecialFunction);			performingSpecial = false;		}	}	}