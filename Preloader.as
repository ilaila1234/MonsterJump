package  {	import flash.display.MovieClip;	import flash.display.Stage;	import flash.net.URLRequest;	import flash.display.Loader;	import flash.events.Event;	import flash.events.ProgressEvent;	import flash.events.MouseEvent;		public class Preloader extends MovieClip {						private var request:URLRequest = new URLRequest("jumpgame.swf"); 	// create URLRequest object		private var loader:Loader = new Loader();							// create loader object		private var content:MovieClip;										// hold loaded content in a movieclip		private var playMC:MovieClip = new PlayMC();						// create a new Play button		public function Preloader() {					//stop();															// stop			loader.contentLoaderInfo.addEventListener(ProgressEvent.PROGRESS, onProgress);			loader.contentLoaderInfo.addEventListener(Event.INIT, preloadInit);			loader.contentLoaderInfo.addEventListener(Event.COMPLETE, onComplete);						loader.load(request);		}				private function onProgress(e:ProgressEvent):void		{						var loadedBytes:int = Math.round(e.target.bytesLoaded / 1024);			var totalBytes:int = Math.round(e.target.bytesTotal / 1024);			var percent:int = (e.target.bytesLoaded / e.target.bytesTotal) * 100;						preloaderScreenMC.percentageTXT.text = String(percent) + "%";		}				private function preloadInit(e:Event)		{			e.target.content.stageReference = stage;			trace ("preloadInit");		}		private function onComplete(e:Event):void		{			loaderInfo.removeEventListener(ProgressEvent.PROGRESS, onProgress);			loaderInfo.removeEventListener(Event.COMPLETE, onComplete);			trace("Complete");									content = e.target.content;						addChild(playMC);			playMC.x = 150;			playMC.y = 400;						playMC.addEventListener(MouseEvent.MOUSE_UP, addContent);		}				private function addContent(e:MouseEvent)		{			//this.parent.removeChild(preloaderScreenMC);			addChild(content);			//e.target.content.addEventListeners();						//content.waitingForPreloaderToAddChild = false;		}			}	}