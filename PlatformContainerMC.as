package {		import flash.display.MovieClip;	import PlatformMC;		public class PlatformContainerMC extends MovieClip {				public var platformArray:Array = new Array(30);				public function PlatformContainerMC() {						for (var i:int = 0; i < 30; i++)			{				platformArray[i] = new Array(8);				for (var j:int = 0; j < 8; j++)				{					platformArray[i][j] = new PlatformMC();										addChild(platformArray[i][j]);				}			}											}				public function initialisePlatforms($collisionArea) {							for (var i:int = 0; i < this.numChildren;i ++) 			{				var child = getChildAt(i);				//trace(child.hasOwnProperty("collisionArea")); 				if (child.hasOwnProperty("collisionArea")) 				{					child.collisionArea = $collisionArea;				}			}		}			}	}